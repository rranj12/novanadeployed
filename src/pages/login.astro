---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<Layout title="Login - Novana" description="Access to private research and insights">
  <Header currentPath="/login" />
  
  <main class="main">
    <div class="container-narrow">
      <div class="login-container">
        <div class="login-card">
          <h1 class="login-title">Client Access</h1>
          <p class="login-subtitle">Enter your credentials below to access your client dashboard</p>
          
          <form id="login-form" class="login-form">
            <div class="form-group">
              <label for="username" class="form-label">Username</label>
              <input type="text" id="username" name="username" class="form-input" required>
            </div>
            
            <div class="form-group">
              <label for="password" class="form-label">Password</label>
              <input type="password" id="password" name="password" class="form-input" required>
            </div>
            
            <button type="submit" class="login-button">Sign In</button>
          </form>
          
          <div id="error-message" class="error-message" style="display: none;"></div>
        </div>
      </div>
    </div>
  </main>

  <Footer />
</Layout>

<script>
  document.getElementById('login-form').addEventListener('submit', async (e) => {
    e.preventDefault();
    
    const username = document.getElementById('username').value;
    const password = document.getElementById('password').value;
    const errorMessage = document.getElementById('error-message');
    
    // Simple client-side validation (you can customize these credentials)
    if (username === 'client' && password === 'novana2025') {
      // Set authentication token
      localStorage.setItem('novana-auth', 'true');
      localStorage.setItem('novana-user', username);
      
      // Redirect to research page
      window.location.href = '/research';
    } else {
      errorMessage.textContent = 'Invalid credentials. Please try again.';
      errorMessage.style.display = 'block';
    }
  });
</script>

<style>
  .login-container {
    min-height: 70vh;
    display: flex;
    align-items: center;
    justify-content: center;
    background: var(--bg-white);
  }
  
  .login-card {
    background: var(--bg-white);
    padding: var(--spacing-3xl);
    border: 1px solid var(--border-color);
    border-radius: 0;
    max-width: 400px;
    width: 100%;
    text-align: center;
  }
  
  .login-title {
    font-size: 2rem;
    font-weight: 700;
    color: var(--text-primary);
    margin-bottom: var(--spacing-sm);
    text-align: center;
  }
  
  .login-subtitle {
    font-size: 1.1rem;
    color: var(--text-secondary);
    margin-bottom: var(--spacing-2xl);
    text-align: center;
    line-height: 1.5;
  }
  
  .form-group {
    margin-bottom: var(--spacing-lg);
  }
  
  .form-label {
    display: block;
    font-weight: 600;
    color: var(--text-primary);
    margin-bottom: var(--spacing-xs);
    font-size: 0.9rem;
  }
  
  .form-input {
    width: 100%;
    padding: var(--spacing-sm) var(--spacing-md);
    border: 1px solid var(--border-color);
    border-radius: 0;
    font-size: 16px;
    transition: border-color 0.2s ease;
    background: var(--bg-white);
    color: var(--text-primary);
  }
  
  .form-input:focus {
    outline: none;
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(33, 117, 47, 0.1);
  }
  
  .login-button {
    width: 100%;
    padding: var(--spacing-md);
    background: var(--text-primary);
    color: white;
    border: none;
    border-radius: 0;
    font-size: 14px;
    font-weight: 500;
    cursor: pointer;
    transition: background-color 0.2s ease;
  }
  
  .login-button:hover {
    background: var(--primary-hover);
    transform: translateY(-1px);
  }
  
  .error-message {
    background: #fee;
    color: #c53030;
    padding: var(--spacing-md);
    border-radius: 12px;
    margin-top: var(--spacing-lg);
    text-align: center;
    font-size: 0.9rem;
  }
  
  /* Dark mode specific styles */
  [data-theme="dark"] .login-button {
    background: #217533 !important; /* Green background in dark mode */
    color: #000000 !important; /* Black text in dark mode */
    --text-color: #000000 !important;
  }
  
  [data-theme="dark"] .login-button:hover {
    background: #1a5f2a !important; /* Darker green on hover */
    color: #000000 !important; /* Black text on hover in dark mode */
    --text-color: #000000 !important;
  }

  /* Extra specificity to override any other rules */
  html[data-theme="dark"] .login-button,
  html[data-theme="dark"] button.login-button {
    color: #000000 !important;
    --text-color: #000000 !important;
  }

  html[data-theme="dark"] .login-button:hover,
  html[data-theme="dark"] button.login-button:hover {
    color: #000000 !important;
    --text-color: #000000 !important;
  }

  /* Maximum specificity override */
  html[data-theme="dark"] .login-card button[type="submit"].login-button,
  html[data-theme="dark"] .login-form button.login-button,
  html[data-theme="dark"] button.login-button.login-button {
    color: #000000 !important;
    text-color: #000000 !important;
    --text-color: #000000 !important;
    filter: none !important;
  }

  html[data-theme="dark"] .login-card button[type="submit"].login-button:hover,
  html[data-theme="dark"] .login-form button.login-button:hover,
  html[data-theme="dark"] button.login-button.login-button:hover {
    color: #000000 !important;
    text-color: #000000 !important;
    --text-color: #000000 !important;
    filter: none !important;
  }

  /* Nuclear option - force black text on ALL child elements */
  html[data-theme="dark"] .login-button,
  html[data-theme="dark"] .login-button *,
  html[data-theme="dark"] .login-button::before,
  html[data-theme="dark"] .login-button::after {
    color: #000000 !important;
  }
  
  @media (max-width: 768px) {
    .login-card {
      padding: var(--spacing-2xl);
      margin: 0 var(--spacing-md);
    }
    
    .login-title {
      font-size: 1.8rem;
    }
  }
</style>
