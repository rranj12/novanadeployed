---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const scientificTools = [
  {
    title: 'Data Center Growth Predictor',
    description: 'Interactive visualization of historical and projected data center distribution across U.S. states from 2008-2030, powered by machine learning models.',
    href: '/scientific/data-center-predictor',
    tags: ['Machine Learning', 'Data Centers', 'Infrastructure', 'Predictive Analytics'],
    date: 'January 2025'
  }
];
---

<Layout title="Scientific Tools" description="Explore Novana's scientific tools and interactive analyses">
  <Header currentPath="/scientific" />
  
  <main class="main">
    <section class="scientific-hero">
      <div class="container-narrow">
        <h1 class="scientific-title">Scientific Tools</h1>
        <p class="scientific-description">
          Interactive tools and predictive models that bring our research to life. Explore our machine learning-powered analyses and data visualizations.
        </p>
      </div>
    </section>

    <section class="tools-section">
      <div class="container">
        <div class="tools-grid">
          {scientificTools.map(tool => (
            <article class="tool-card">
              <div class="tool-content">
                <div class="tool-tags">
                  {tool.tags.map(tag => (
                    <span class="tag">{tag}</span>
                  ))}
                </div>
                <h2 class="tool-title">
                  <a href={tool.href} class="tool-link">{tool.title}</a>
                </h2>
                <p class="tool-description">{tool.description}</p>
                <div class="tool-meta">
                  <span class="tool-date">{tool.date}</span>
                </div>
              </div>
            </article>
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .main {
    min-height: calc(100vh - 70px);
  }

  .scientific-hero {
    padding: 80px 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    border-bottom: 1px solid #e5e5e5;
  }

  .scientific-title {
    font-size: clamp(2rem, 4vw, 2.8rem);
    font-weight: 500;
    color: #1a1a1a;
    margin-bottom: 32px;
    line-height: 1.1;
  }

  .scientific-description {
    font-size: 20px;
    color: #666;
    line-height: 1.6;
  }

  .tools-section {
    padding: 80px 0;
  }

  .tools-grid {
    display: grid;
    gap: 32px;
    max-width: 800px;
    margin: 0 auto;
  }

  .tool-card {
    background: #ffffff;
    border: 1px solid #e5e5e5;
    border-radius: 12px;
    padding: 32px;
    transition: all 0.2s ease;
  }

  .tool-card:hover {
    border-color: #21752F;
    box-shadow: 0 8px 24px rgba(33, 117, 47, 0.12);
  }

  .tool-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 16px;
  }

  .tag {
    background: rgba(33, 117, 47, 0.1);
    color: #21752F;
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 12px;
    font-weight: 500;
  }

  .tool-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 16px;
    line-height: 1.3;
  }

  .tool-link {
    color: #1a1a1a;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .tool-link:hover {
    color: #21752F;
  }

  .tool-description {
    color: #666;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .tool-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: 14px;
    color: #999;
  }

  @media (max-width: 768px) {
    .scientific-hero,
    .tools-section {
      padding: 60px 0;
    }

    .tool-card {
      padding: 24px;
    }
  }
</style> 