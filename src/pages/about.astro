---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import AuthorCard from '../components/AuthorCard.astro';
import Footer from '../components/Footer.astro';

const authors = [
	{
		name: 'Justin Wang',
		title: 'Co-Founder & Principal Researcher',
		education: 'CS & Math, Stanford University',
		bio: 'Previously worked in Equity Trading on Invesco Global Capital Markets Group and sourced sponsorships for Stanford TreeHacks. Brings domain knowledge about capital markets and ongoing developments in applied AI.',
		expertise: ['AI', 'Biotechnology', 'Investment Management'],
		email: 'justinwanghx@gmail.com',
		linkedin: 'https://www.linkedin.com/in/jstwng/'
	},
	{
		name: 'Rishabh Ranjan',
		title: 'Co-Founder & Principal Researcher',
		education: 'Bioengineering & CS, Stanford University',
		bio: 'Longevity Biotech and AI Fellow at the R42 group and nanoparticle drug delivery research at Stanford Medicine. Brings domain expertise in translational biotech, emerging therapeutics, and AI applications in life sciences.',
		expertise: ['Biotechnology', 'Equity Research', 'AI'],
		email: 'rishabh12ranjan@gmail.com',
		linkedin: 'https://www.linkedin.com/in/rishabhranj/'
	}
];
---

<Layout title="About" description="Meet the research team behind Novana">
	<Header currentPath="/about" />
	
	<main class="main">
		<section class="about-hero">
			<div class="container-narrow">
				<h1 class="about-title">About Novana</h1>
				<p class="about-description">
					We are a research-focused analysis firm specializing in deep technology opportunities. Our team combines academic rigor with industry experience to provide institutional-grade insights on emerging technology investments and market trends.
				</p>
			</div>
		</section>

		<section class="authors-section">
			<div class="container">
				<h2 class="section-title">Our Team</h2>
				<div class="authors-grid">
					{authors.map(author => (
						<AuthorCard author={author} />
					))}
				</div>
			</div>
		</section>

		<section class="mission">
			<div class="container-narrow">
				<div class="mission-content">
					<h2 class="mission-title">Our Mission</h2>
					<p class="mission-text">
						We bridge the gap between cutting-edge scientific research and investment analysis, providing institutional investors with the technical depth needed to evaluate complex deep technology opportunities. Our research focuses on identifying companies positioned for long-term success in quantum computing, synthetic biology, advanced materials, and other frontier technologies.
					</p>
				</div>
			</div>
		</section>
	</main>
	<Footer />
</Layout>

<style>
	.main {
		min-height: calc(100vh - 70px);
	}

	.about-hero {
		padding: 80px 0;
		background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
		border-bottom: 1px solid #e5e5e5;
	}

	.about-title {
		font-size: clamp(2rem, 4vw, 2.8rem);
		font-weight: 700;
		color: #1a1a1a;
		margin-bottom: 32px;
		line-height: 1.1;
	}

	.about-description {
		font-size: 20px;
		color: #666;
		line-height: 1.6;
	}

	.authors-section {
		padding: 80px 0;
	}

	.section-title {
		font-size: 32px;
		font-weight: 600;
		color: #1a1a1a;
		margin-bottom: 48px;
		text-align: center;
		position: relative;
	}

	.section-title::after {
		content: '';
		position: absolute;
		bottom: -12px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 3px;
		background: linear-gradient(90deg, #6C43D7, #8B5FE8);
		border-radius: 2px;
	}

	.authors-grid {
		display: grid;
		grid-template-columns: repeat(auto-fit, minmax(400px, 1fr));
		gap: 40px;
		align-items: stretch;
	}

	.mission {
		padding: 80px 0;
		background: linear-gradient(135deg, #f8f9fa 0%, rgba(108, 67, 215, 0.02) 100%);
	}

	.mission-content {
		text-align: center;
		max-width: 700px;
		margin: 0 auto;
	}

	.mission-title {
		font-size: 32px;
		font-weight: 600;
		color: #1a1a1a;
		margin-bottom: 32px;
		position: relative;
	}

	.mission-title::after {
		content: '';
		position: absolute;
		bottom: -12px;
		left: 50%;
		transform: translateX(-50%);
		width: 60px;
		height: 3px;
		background: linear-gradient(90deg, #6C43D7, #8B5FE8);
		border-radius: 2px;
	}

	.mission-text {
		font-size: 18px;
		color: #666;
		line-height: 1.7;
	}

	@media (max-width: 768px) {
		.about-hero,
		.authors-section,
		.mission {
			padding: 60px 0;
		}

		.authors-grid {
			grid-template-columns: 1fr;
			gap: 32px;
		}
	}

	@media (max-width: 500px) {
		.authors-grid {
			grid-template-columns: 1fr;
		}
	}
</style>