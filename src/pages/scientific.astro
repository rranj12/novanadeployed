---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import ArticleCard from '../components/ArticleCard.astro';
import Footer from '../components/Footer.astro';

const scientificTools = [
  {
    slug: 'data-center-predictor',
    title: 'Data Center Growth Predictor',
    excerpt: 'Interactive visualization of historical and projected data center distribution across U.S. states from 2008-2030, powered by machine learning models.',
    tags: ['Machine Learning', 'Data Centers', 'Infrastructure', 'Predictive Analytics'],
    authors: 'Justin Wang, Rishabh Ranjan',
    date: 'January 2025'
  }
];
---

<Layout title="Scientific" description="Interactive tools and predictive models that bring our research to life">
  <Header currentPath="/scientific" />
  
  <main class="main">
    <section class="hero">
      <div class="container-narrow">
        <div class="hero-content">
          <h1 class="hero-title">Scientific Tools</h1>
          <p class="hero-subtitle">Interactive tools and predictive models that bring our research to life. Explore our machine learning-powered analyses and data visualizations.</p>
        </div>
      </div>
    </section>

    <section class="articles">
      <div class="container-narrow">
        <h2>Latest Tools</h2>
        <div class="articles-list">
          {scientificTools.map(tool => (
            <ArticleCard article={tool} basePath="/scientific" />
          ))}
        </div>
      </div>
    </section>
  </main>
  
  <Footer />
</Layout>

<style>
  .main {
    min-height: calc(100vh - 70px);
  }

  .hero {
    padding: 80px 0;
    background: linear-gradient(135deg, #f8f9fa 0%, #ffffff 100%);
    border-bottom: 1px solid #e5e5e5;
  }

  .hero-content {
    text-align: center;
  }

  .hero-title {
    font-size: clamp(2rem, 4vw, 2.8rem);
    font-weight: 500;
    color: #1a1a1a;
    margin-bottom: 32px;
    line-height: 1.1;
  }

  .hero-subtitle {
    font-size: 20px;
    color: #666;
    line-height: 1.6;
  }

  .articles {
    padding: 80px 0;
  }

  .articles h2 {
    font-size: 2rem;
    font-weight: 500;
    color: #1a1a1a;
    margin-bottom: 32px;
    text-align: center;
  }

  .articles-list {
    display: grid;
    gap: 32px;
    max-width: 800px;
    margin: 0 auto;
  }

  .tool-card {
    background: #ffffff;
    border: 1px solid #e5e5e5;
    border-radius: 12px;
    padding: 32px;
    transition: all 0.2s ease;
  }

  .tool-card:hover {
    border-color: #21752F;
    box-shadow: 0 8px 24px rgba(33, 117, 47, 0.12);
  }

  .tool-tags {
    display: flex;
    flex-wrap: wrap;
    gap: 8px;
    margin-bottom: 16px;
  }

  .tag {
    background: rgba(33, 117, 47, 0.1);
    color: #21752F;
    padding: 4px 12px;
    border-radius: 16px;
    font-size: 12px;
    font-weight: 500;
  }

  .tool-title {
    font-size: 24px;
    font-weight: 600;
    margin-bottom: 16px;
    line-height: 1.3;
  }

  .tool-link {
    color: #1a1a1a;
    text-decoration: none;
    transition: color 0.2s ease;
  }

  .tool-link:hover {
    color: #21752F;
  }

  .tool-description {
    color: #666;
    line-height: 1.6;
    margin-bottom: 20px;
  }

  .tool-meta {
    display: flex;
    align-items: center;
    gap: 16px;
    font-size: 14px;
    color: #999;
  }

  @media (max-width: 768px) {
    .hero,
    .articles {
      padding: 60px 0;
    }

    .tool-card {
      padding: 24px;
    }
  }
</style> 