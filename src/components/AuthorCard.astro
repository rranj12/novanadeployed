---
const { author } = Astro.props;
---

<div class="author-card">
	<div class="author-header">
		<div class="author-left">
			<div class="author-info">
				<h3 class="author-name">{author.name}</h3>
				<p class="author-title">{author.title}</p>
				<p class="author-education">{author.education}</p>
			</div>
			<div class="author-bio-section">
				<p class="author-bio">{author.bio}</p>
			</div>
		</div>
		<div class="author-image">
			<img src={author.image} alt={author.name} />
		</div>
	</div>
	
	<div class="author-expertise">
		{author.expertise.map(skill => (
			<span class="tag">{skill}</span>
		))}
	</div>
	
	<div class="author-contact">
		<a href={`mailto:${author.email}`} class="contact-link">
			<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
				<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
				<polyline points="22,6 12,13 2,6"></polyline>
			</svg>
			<span>{author.email}</span>
		</a>
		<a href={author.linkedin} class="contact-link" target="_blank" rel="noopener noreferrer">
			<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
				<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
				<rect x="2" y="9" width="4" height="12"></rect>
				<circle cx="4" cy="4" r="2"></circle>
			</svg>
			<span>LinkedIn</span>
		</a>
	</div>
</div>

<style>
	.author-card {
		background: white;
		border: 1px solid var(--border-color);
		border-radius: 8px;
		padding: var(--spacing-md);
		height: 100%;
		min-height: 280px;
		display: flex;
		flex-direction: column;
		gap: var(--spacing-sm);
		transition: all 0.2s ease;
	}

	.author-card:hover {
		border-color: var(--text-primary);
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(0, 0, 0, 0.08);
	}

	.author-header {
		display: flex;
		justify-content: space-between;
		align-items: flex-start;
		gap: var(--spacing-md);
		border-bottom: 1px solid var(--bg-dark);
		padding-bottom: var(--spacing-sm);
	}

	.author-left {
		flex: 1;
		display: flex;
		flex-direction: column;
		gap: var(--spacing-sm);
	}

	.author-info {
		/* Info styles remain the same */
	}

	.author-image {
		flex-shrink: 0;
		width: 160px;
		height: 200px;
		border-radius: 6px;
		overflow: hidden;
	}

	.author-card:hover .author-image {
		/* Remove hover effect */
	}

	.author-image img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		object-position: center;
	}

	.author-name {
		font-size: 22px;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: var(--spacing-xs);
	}

	.author-title {
		font-size: 15px;
		line-height: 1.1;
		font-weight: 500;
		color: var(--text-primary);
		margin-bottom: var(--spacing-xs);
	}

	.author-education {
		font-size: 13px;
		color: var(--text-muted);
		font-style: italic;
	}

	.author-bio-section {
		width: 100%;
	}

	.author-bio {
		color: var(--text-secondary);
		line-height: 1.5;
		font-size: 14px;
		margin: 0;
	}

	.author-expertise {
		display: flex;
		flex-wrap: wrap;
		gap: var(--spacing-xs);
	}

	.author-contact {
		display: flex;
		flex-direction: column;
		gap: var(--spacing-xs);
		padding-top: var(--spacing-sm);
		border-top: 1px solid var(--bg-dark);
	}

	.contact-link {
		display: flex;
		align-items: center;
		gap: var(--spacing-xs);
		color: var(--text-secondary);
		text-decoration: none;
		font-size: 13px;
		transition: color 0.2s ease;
	}

	.contact-link:hover {
		color: var(--text-primary);
	}

	@media (max-width: 768px) {
		.author-card {
			padding: var(--spacing-sm);
			min-height: 320px;
		}

		.author-header {
			flex-direction: column;
			align-items: center;
			text-align: center;
			gap: var(--spacing-sm);
		}

		.author-left {
			width: 100%;
			text-align: center;
		}

		.author-image {
			width: 120px;
			height: 150px;
		}

		.author-name {
			font-size: 20px;
		}
	}
</style>