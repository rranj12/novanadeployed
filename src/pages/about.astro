---
import Layout from '../layouts/Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

const authors = [
	{
		name: 'Justin Wang',
		title: 'Co-Founder & Principal Researcher',
		linkedin: 'https://www.linkedin.com/in/jstwng/',
		twitter: 'https://x.com/jstwng',
		image: '/justin.jpeg'
	},
	{
		name: 'Rishabh Ranjan',
		title: 'Co-Founder & Principal Researcher',
		linkedin: 'https://www.linkedin.com/in/rishabhranj/',
		twitter: 'https://x.com/rishabh12ranjan',
		image: '/rishabh.jpeg'
	}
];
---

<Layout title="About" description="Meet the research team behind Novana">
	<Header currentPath="/about" />
	
	<main class="main">
		<div class="container">
			<article class="article">
				<header class="article-header">
					<h1 class="article-title">About</h1>
					<p class="article-blurb">We are in the midst of a major technological revolution â€” artificial intelligence will fundamentally change the ways in which humans live and our society functions. At Novana, we believe that strides in artificial intelligence will enable previously nascent industries to thrive. Furthermore, we believe that Silicon Valley is the geographic hub that will house it all: the San Francisco Bay Area is where researchers turn founders, scientific innovation finds financial backing, and East meets West.</p>
				</header>
			</article>
		</div>

		<section class="team-section">
			<div class="container">
				<div class="team-grid">
					{authors.map(author => (
						<div class="team-member">
							<div class="member-image">
								<img src={author.image} alt={author.name} />
							</div>
							<div class="member-info">
								<h3 class="member-name">{author.name}</h3>
								<p class="member-title">{author.title}</p>
								<div class="member-social">
									<a href={author.linkedin} target="_blank" rel="noopener noreferrer" class="social-link">
										<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
											<rect x="2" y="9" width="4" height="12"></rect>
											<circle cx="4" cy="4" r="2"></circle>
										</svg>
									</a>
									<a href={author.twitter} target="_blank" rel="noopener noreferrer" class="social-link">
										<svg width="20" height="20" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
											<path d="M23 3a10.9 10.9 0 0 1-3.14 1.53 4.48 4.48 0 0 0-7.86 3v1A10.66 10.66 0 0 1 3 4s-4 9 5 13a11.64 11.64 0 0 1-7 2c9 5 20 0 20-11.5a4.5 4.5 0 0 0-.08-.83A7.72 7.72 0 0 0 23 3z"></path>
										</svg>
									</a>
								</div>
							</div>
						</div>
					))}
				</div>
			</div>
		</section>
	</main>
	
	<Footer />
</Layout>

<style>
	.main {
		background: #ffffff;
		color: #1a1a1a;
		min-height: calc(100vh - 80px);
	}

	.container {
		max-width: 1160px;
		margin: 0 auto;
		padding: 0 var(--spacing-lg);
	}

	.article {
		padding: var(--spacing-3xl) 0 var(--spacing-sm) 0; /* Further reduced bottom padding from lg to sm */
		text-align: center;
	}

	.article-title {
		font-size: 2.5rem; /* Slightly smaller to match research page proportions */
		font-weight: 700;
		color: var(--text-primary);
		margin-bottom: var(--spacing-xl);
		line-height: 1.1;
	}

	.article-blurb {
		font-size: 1.1rem; /* Slightly smaller to match research page text sizing */
		line-height: 1.6;
		color: var(--text-secondary);
		max-width: 900px;
		margin: 0 auto;
		font-weight: 400;
	}

	.team-section {
		padding: 0; /* Reduced from 3xl to xl for closer spacing */
		background: white;
		padding-bottom: var(--spacing-xl); /* Add padding between containers and footer */
	}

	.section-title {
		font-size: 2rem;
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: var(--spacing-3xl);
		text-align: center;
	}

	.team-grid {
		display: grid;
		grid-template-columns: repeat(2, 1fr);
		gap: 0; /* Remove gap to connect containers */
		justify-items: stretch; /* Stretch to fill available space */
		align-items: start;
		max-width: 600px; /* Constrain total width (320px * 2) */
		margin: 0 auto; /* Center the grid */
		margin-bottom: var(--spacing-3xl);
	}

	.team-member {
		text-align: center;
		background: white;
		padding: 30px; /* Match article card padding */
		border-top: 1px solid var(--border-color);
		border-bottom: 1px solid var(--border-color);
		border-left: 1px solid var(--border-color);
		min-height: 400px; /* Match article card min-height */
		display: flex;
		flex-direction: column;
	}

	/* Add right border only to the last (rightmost) container */
	.team-member:last-child {
		border-right: 1px solid var(--border-color);
	}

	.member-image {
		margin-bottom: var(--spacing-md); /* Reduced from xl to md for tighter spacing */
		flex-shrink: 0;
	}

	.member-image img {
		max-width: 240px;
		height: auto;
		object-fit: cover;
		filter: grayscale(100%);
		display: block;
		margin: 0 auto;
	}

	.member-info {
		text-align: left; /* Change to left align */
		flex-grow: 1;
		display: flex;
		flex-direction: column;
	}

	.member-name {
		font-size: 1.4rem; /* Match article title size */
		font-weight: 600;
		color: var(--text-primary);
		margin-bottom: var(--spacing-xs); /* Reduced spacing */
	}

	.member-title {
		font-size: 0.9rem; /* Match article excerpt size */
		color: var(--text-secondary);
		margin-bottom: var(--spacing-md); /* Reduced spacing */
		font-weight: 400;
		flex-grow: 1;
		line-height: 1.4;
	}

	.member-social {
		display: flex;
		gap: var(--spacing-sm); /* Reduced gap */
		justify-content: flex-start; /* Left align social buttons */
		margin-top: auto; /* Push to bottom like article meta */
	}

	.social-link {
		color: var(--text-muted);
		transition: color 0.2s ease;
		display: flex;
		align-items: center;
		justify-content: center;
		padding: var(--spacing-sm);
		border-radius: 6px;
		border: 1px solid var(--border-color);
		background: white;
	}

	.social-link:hover {
		color: var(--text-primary);
		border-color: var(--text-muted);
	}

	@media (max-width: 1024px) {
		.member-image img {
			max-width: 280px;
			height: auto;
		}
		
		.team-member {
			min-height: 350px; /* Slightly smaller on tablets */
		}
	}

	@media (max-width: 768px) {
		.article-title {
			font-size: 2rem; /* Maintain proportional scaling */
		}

		.section-title {
			font-size: 1.5rem;
		}

		.article-blurb {
			font-size: 1rem; /* Maintain proportional scaling */
		}

		.team-grid {
			grid-template-columns: 1fr;
			gap: var(--spacing-2xl);
		}

		.member-image img {
			max-width: 240px;
			height: auto;
		}

		.member-name {
			font-size: 1.3rem; /* Slightly smaller than before but proportional */
		}

		.team-member {
			padding: var(--spacing-lg);
			min-height: 320px; /* Smaller on mobile */
		}
	}
</style>