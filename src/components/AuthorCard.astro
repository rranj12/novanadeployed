---
const { author } = Astro.props;
---

<div class="author-card">
	<div class="author-header">
		<h3 class="author-name">{author.name}</h3>
		<p class="author-title">{author.title}</p>
		<p class="author-education">{author.education}</p>
	</div>
	
	<p class="author-bio">{author.bio}</p>
	
	<div class="author-expertise">
		{author.expertise.map(skill => (
			<span class="tag">{skill}</span>
		))}
	</div>
	
	<div class="author-contact">
		<a href={`mailto:${author.email}`} class="contact-link">
			<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
				<path d="M4 4h16c1.1 0 2 .9 2 2v12c0 1.1-.9 2-2 2H4c-1.1 0-2-.9-2-2V6c0-1.1.9-2 2-2z"></path>
				<polyline points="22,6 12,13 2,6"></polyline>
			</svg>
			<span>{author.email}</span>
		</a>
		<a href={author.linkedin} class="contact-link" target="_blank" rel="noopener noreferrer">
			<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
				<path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"></path>
				<rect x="2" y="9" width="4" height="12"></rect>
				<circle cx="4" cy="4" r="2"></circle>
			</svg>
			<span>LinkedIn</span>
		</a>
	</div>
</div>

<style>
	.author-card {
		background: white;
		border: 1px solid #e5e5e5;
		border-radius: 12px;
		padding: 32px;
		height: 100%;
		display: flex;
		flex-direction: column;
		gap: 20px;
		transition: all 0.2s ease;
	}

	.author-card:hover {
		border-color: #6C43D7;
		transform: translateY(-2px);
		box-shadow: 0 8px 25px rgba(108, 67, 215, 0.1);
	}

	.author-header {
		border-bottom: 1px solid #f5f5f5;
		padding-bottom: 20px;
	}

	.author-name {
		font-size: 24px;
		font-weight: 600;
		color: #1a1a1a;
		margin-bottom: 8px;
	}

	.author-title {
		font-size: 16px;
		font-weight: 500;
		color: #6C43D7;
		margin-bottom: 4px;
	}

	.author-education {
		font-size: 14px;
		color: #888;
		font-style: italic;
	}

	.author-bio {
		color: #666;
		line-height: 1.6;
		flex-grow: 1;
	}

	.author-expertise {
		display: flex;
		flex-wrap: wrap;
		gap: 8px;
	}

	.author-contact {
		display: flex;
		flex-direction: column;
		gap: 12px;
		padding-top: 20px;
		border-top: 1px solid #f5f5f5;
	}

	.contact-link {
		display: flex;
		align-items: center;
		gap: 8px;
		color: #666;
		text-decoration: none;
		font-size: 14px;
		transition: color 0.2s ease;
	}

	.contact-link:hover {
		color: #6C43D7;
	}

	@media (max-width: 768px) {
		.author-card {
			padding: 24px;
		}
	}
</style>